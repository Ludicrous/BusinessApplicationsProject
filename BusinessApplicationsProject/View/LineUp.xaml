<UserControl x:Class="BusinessApplicationsProject.View.LineUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="2000">
    <Grid x:Name="LayoutRoot" Margin="0,33,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="390*"/>
        </Grid.RowDefinitions>
        <Label Content="Line up" HorizontalAlignment="Left" Margin="865,14,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="cboDates" HorizontalAlignment="Left" Height="39" Margin="281,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="313"/>
        <ComboBox x:Name="cboStages" HorizontalAlignment="Left" Height="39" Margin="281,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="313"/>
        <ComboBox x:Name="cboBands" HorizontalAlignment="Left" Height="36" Margin="281,13,0,0" Grid.Row="3" VerticalAlignment="Top" Width="313"/>
        <StackPanel x:Name="StackBeginUur" Orientation="Horizontal" Margin="281,10,339,17" Grid.Row="4">
            <TextBox x:Name="txtNum" x:FieldModifier="private" Margin="0,5,0,5" Width="70" Text="0"  />
            <Button x:Name="btnDown" x:FieldModifier="private" Margin="5,5,0,5"  Content="˅" Width="20"  />
            <Button x:Name="btnUp" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20"  />
        </StackPanel>
        <StackPanel x:Name="StackBeginMin" Orientation="Horizontal" Margin="474,10,156,17" Grid.Row="4">
            <TextBox x:Name="txtNum1" x:FieldModifier="private" Margin="0,5,0,5" Width="70" Text="0"  />
            <Button x:Name="btnDown1" x:FieldModifier="private" Margin="5,5,0,5"  Content="˅" Width="20"  />
            <Button x:Name="btnUp1" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20"  />
        </StackPanel>
        <StackPanel x:Name="StackEindUur" Orientation="Horizontal" Margin="281,10,339,18" Grid.Row="5">
            <TextBox x:Name="txtNum2" x:FieldModifier="private" Margin="0,5,0,5" Width="70" Text="0"  />
            <Button x:Name="btnDown2" x:FieldModifier="private" Margin="5,5,0,5"  Content="˅" Width="20" />
            <Button x:Name="btnUp2" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20" />
        </StackPanel>
        <StackPanel x:Name="StackEindMin" Orientation="Horizontal" Margin="474,10,156,18" Grid.Row="5">
            <TextBox x:Name="txtNum3" x:FieldModifier="private" Margin="0,5,0,5" Width="70" Text="0"  />
            <Button x:Name="btnDown3" x:FieldModifier="private" Margin="5,5,0,5"  Content="˅" Width="20" />
            <Button x:Name="btnUp3" x:FieldModifier="private" Margin="5,5,0,5" Content="˄" Width="20"/>
        </StackPanel>
        <Button   x:Name="btnAdd" Content="Toevoegen" HorizontalAlignment="Left" Margin="281,4,0,0" Grid.Row="6" VerticalAlignment="Top" Width="70" Height="55"/>
        <Button  x:Name="btnDelete" Content="Verwijderen" HorizontalAlignment="Left" Grid.Row="6" VerticalAlignment="Top" Width="70" Height="55" Margin="524,4,0,0"/>
        <Button x:Name="btnSync" Content="Bewerken" HorizontalAlignment="Left" Margin="400,4,0,0" Grid.Row="6" VerticalAlignment="Top" Width="70" Height="55"/>
        <ListBox x:Name="lstLineUpDagStage" Grid.Column="1" HorizontalAlignment="Left" Height="325" Margin="160,17,0,0" Grid.Row="1" Grid.RowSpan="6" VerticalAlignment="Top" Width="384"/>
        <Grid x:Name="LineUpGrid" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="410" Grid.Row="7" VerticalAlignment="Top" Width="1544" Margin="0,0,-44,-20">
            <Label Content="Hier komt de lineup " HorizontalAlignment="Left" Margin="439.9,136.1,0,0" VerticalAlignment="Top" Height="38.443" Width="698.91"/>
        </Grid>
        <Label x:Name="lblNaam" Style="{StaticResource IdLabels}" Content="Naam" HorizontalAlignment="Left"  Margin="195,28,0,0" Grid.Row="1" VerticalAlignment="Top"  />
        <Label Style="{StaticResource ResourceKey=IdLabels}" Content="Stage" HorizontalAlignment="Left"  Margin="195,27,0,0" Grid.Row="2" VerticalAlignment="Top" />
        <Label Style="{StaticResource ResourceKey=IdLabels}" Content="Band" HorizontalAlignment="Left"  Margin="195,28,0,0" Grid.Row="3" VerticalAlignment="Top"  />
        <Label Style="{StaticResource ResourceKey=IdLabels}" Content="Starttijd" HorizontalAlignment="Left" Margin="195,12,0,0" Grid.Row="4" VerticalAlignment="Top"  />
        <Label Style="{StaticResource ResourceKey=IdLabels}" Content="Eindtijd" HorizontalAlignment="Left" Margin="195,12,0,0" Grid.Row="5" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
