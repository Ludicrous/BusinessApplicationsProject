<UserControl x:Class="BusinessApplicationsProject.View.Tickets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="850" Width="2000">
    <Grid x:Name="LayoutRoot" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Label x:Name="lblTickets" Content="Tickets" Grid.Column="4" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Top" Height="37" Width="84"/>
        <ListBox x:Name="lstSoorten" HorizontalAlignment="Left" Height="275.162" Margin="10,56.255,0,0" Grid.Row="1" Grid.RowSpan="5" VerticalAlignment="Top" Width="237.315" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="txtNaam" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="63.412,13.255,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="134.36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtInfo" Grid.Column="4" HorizontalAlignment="Left" Height="152.815" Margin="69.363,42.035,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="134.36" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtBeschikbaar" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="63.412,10,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="134.36" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtPrijs" Grid.Column="3" HorizontalAlignment="Left" Height="20.283" Margin="65.482,12.317,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="134.36" Grid.ColumnSpan="2"/>
